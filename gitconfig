[commit]
  	gpgsign = true
[core]
  	editor = nvim
  	autocrlf = input
[format]
  	pretty = format:%C(auto,yellow)%h%C(auto,magenta)% G? %C(auto,blue)%ad %C(auto,green) %aN%C(auto,reset) %s%C(auto,red)% gD% D
[filter "lfs"]
  	process = git-lfs filter-process
  	required = true
  	clean = git-lfs clean -- %f
  	smudge = git-lfs smudge -- %f
[init]
	templateDir = /home/nouillet/.git-template
	defaultBranch = main
[pull]
  	rebase = false
[log]
	date = local
[alias]
    a  = add
    aa = add --all
	cb = checkout -b
	ci = commit
	cia = commit --amend
	clone-for-worktrees = "!sh $HOME/.local/scripts/git-worktree"
	co = checkout
	cp = cherry-pick
	dellb = branch -D
	delrb = push origin --delete
	df = diff
	dfs = diff --staged
	ph = push
	pha = push --all
	phf = push -f
	phtg = push --tags
	pl = pull
	re = restore
	reb = pull --rebase
	rst = restore --staged
	st = status
	wt = worktree
	# Basically creates a folder of the same name that either the remote branch name is or the new branch I'll be working on
	wta = "!f() { git worktree add $1 $1; }; f"
	wtab = "!f() { git worktree add -b $1 $1; }; f"
	wtls = worktree list
	wtrm = worktree remove
	wtup = "!bash $HOME/.local/scripts/git-worktree-update"
[push]
	autoSetupRemote = true
[difftool]
    prompt = true
[diff]
    tool = nvimdiff
[difftool "nvimdiff"]
    cmd = "nvim -d \"$LOCAL\" \"$REMOTE\""
[merge]
    tool = fugitive
[mergetool]
    keepBackup = false
[mergetool "fugitive"]
    cmd = nvim -f -c \"Gdiffsplit!\" \"$MERGED\"
[tag]
	sort = -version:refname
