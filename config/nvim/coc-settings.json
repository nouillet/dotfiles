{
    "languageserver": {
        "puppet":{
            "command": "ruby",
            "args": ["/home/kpelletier/GitHub/puppet-editor-services/puppet-languageserver","--stdio","--puppet-settings=--moduledir,/home/kpelletier/Projects/Infra/puppet/modules"],
            "cwd": "/home/kpelletier/GitHub/puppet-editor-services",
            "filetypes": ["puppet"],
            "rootPatterns": [".git/", "metadata.json"]
        },
        "bash": {
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"]
        },
        "golang": {
            "command": "gopls",
            "rootPatterns": ["go.mod", ".vim/", ".git/", ".hg/"],
            "filetypes": ["go"]
        },
        "dockerfile": {
            "command": "docker-langserver",
            "filetypes": ["dockerfile"],
            "args": ["--stdio"]
        },
        "python":{
            "command": "python",
            "filetypes": ["python"]
        }
    }
}
